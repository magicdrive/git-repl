exefile="$(cd $(dirname $0) && pwd)/../libexec/git-repl-exe"

export GIT_REPL_DEFAULT_PROMPT="${GIT_REPL_DEFAULT_PROMPT:-"\$ git [\\W/] > "}"


git::repl::help() {
    cat << HELP
USAGE:
    * git-repl                      # Launch git with REPL in current path.
    *  [-v|--verbose]               # REPL verbose mode.
    *  [-h|--help]                  # Show This help.
HELP
    exit 1
}


git::repl::main() {
    rlwrap "${exefile}"
}


git::repl::mode::verbose() {
    env __GIT_REPL_VERBOSE=1 rlwrap ./libexec/git-repl-exe
}


optspec=":-:hcv"
while getopts "$optspec" optchar; do
    case "${optchar}" in
        -)
            case "${OPTARG}" in
                help)
                    git::repl::help; exit 1
                    ;;
                verbose)
                    git::repl::mode::verbose
                    ;;
                *)
                    if [ "$OPTERR" = 1 ] && [ "${optspec:0:1}" != ":" ]; then
                        echo "Unknown option --${OPTARG}" >&2
                    fi
                    ;;
            esac;;
        h)
            git::repl::help; exit 1
            ;;
        v)
            git::repl::mode::verbose
            ;;
        *)
            if [ "$OPTERR" != 1 ] || [ "${optspec:0:1}" = ":" ]; then
                echo "Non-option argument: '-${OPTARG}'" >&2
            fi
            exit 1
            ;;
    esac
done


git::repl::main && exit 0;

